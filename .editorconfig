root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
# double whitespace at end of line denotes a line break in Markdown
trim_trailing_whitespace = false

[{.clang-tidy,*.json,*.yml,*.yaml}]
indent_size = 2

[Makefile]
indent_style = tab
